{
  "name": "shopify-storefront-test-automation",
  "version": "1.0.0",
  "description": "Executable test automation for Shopify Storefront app",
  "scripts": {
    "test:android": "wdio config/wdio.android.conf.js",
    "test:android-ci": "mkdir -p artifacts/screenshots && wdio config/wdio.android.conf.js",
    "test:ios": "wdio config/wdio.ios.conf.js",
    "test:all": "npm run test:android && npm run test:ios",
    "report": "allure generate allure-results --clean && allure open",
    "setup": "npm install && mkdir -p artifacts/screenshots artifacts/videos"
  },
  "devDependencies": {
    "@wdio/appium-service": "^8.0.0",
    "@wdio/cli": "^8.0.0",
    "@wdio/local-runner": "^8.0.0",
    "@wdio/mocha-framework": "^8.0.0",
    "@wdio/spec-reporter": "^8.0.0",
    "@wdio/allure-reporter": "^8.0.0",
    "allure-commandline": "^2.13.0",
    "appium": "^2.0.0",
    "chai": "^4.3.0"
  }
}
